@model Model4You.Web.ViewModels.Model.ProfileViewModel
@{
    this.ViewData["Title"] = "Model Profile";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Topmodel - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>

    <section class="hero-wrap hero-wrap-2" style="background-image:url(/images/bg_1.jpg);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">
                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Model Profile</h1>
                </div>

            </div>
        </div>
    </section>

    <section class="ftco-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12 model-single">
                    <div class="text w-100 mb-3 text-center">
                        <h2><a>@Model.FirstName @Model.LastName</a></h2>
                        <a href="@Model.ModelInformation.FacebookUrl"><span style="font-size: 50px" class="icon-facebook">    </span> </a>
                        <a href="@Model.ModelInformation.InstagramUrl"><span style="font-size: 50px" class="icon-instagram"></span></a>

                        <ul class="info w-100">
                            <li><span>Location:</span><span>@Model.ModelInformation.Country, @Model.ModelInformation.City</span></li>
                            <li><span>Age:</span><span>@Model.ModelInformation.Age</span></li>
                            <li><span>Gender:</span><span>@Model.ModelInformation.Gender</span></li>
                            <li><span>Height:</span><span>@Model.ModelInformation.Height</span></li>
                            <li><span>Waist:</span><span>@Model.ModelInformation.Waist</span></li>
                            <li><span>Hips:</span><span>@Model.ModelInformation.Hips</span></li>
                            <li><span>Bust:</span><span>@Model.ModelInformation.Bust</span></li>
                            @if (!string.IsNullOrWhiteSpace(Model.ModelInformation.ModelType))
                            {
                                <li><span>Model Type:</span><span>@Model.ModelInformation.ModelType</span></li>
                            }
                            @if (!string.IsNullOrWhiteSpace(ViewData["Ethnicity"].ToString()))
                            {
                                <li><span>Ethnicity:</span><span>@ViewData["Ethnicity"]</span></li>
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.ModelInformation.Nationality))
                            {
                                <li><span>Nationality:</span><span>@Model.ModelInformation.Nationality</span></li>
                            }
                        </ul>
                        <div class="col-md-12 model-single">
                            @*<a href="@Url.Action("Create", "Booking", new {id = Model.Id})" class="btn btn-default btn-block">
                                    <input type="hidden" asp-for="" value="@this.Model.FirstName" />
                                    <span class="btn btn-danger" aria-hidden="true">Book this model</span>
                                </a>*@
                            @if (!User.IsInRole("Model"))
                            {
                                <a asp-controller="Booking" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-outline-warning">Book this model</a>
                            }

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="model model-2 img d-flex align-items-end image-popup" href="@Model.ProfilePicture" style="background-image: url(@Model.ProfilePicture);">
                            </div>
                        </div>
                        @*image-pop using href to display full size pictures*@
                        @foreach (var image in Model.UserImages)
                        {
                            <div class="col-md-4">
                                <div class="model model-2 img d-flex align-items-end image-popup" href="@image.ImageUrl" style="background-image: url(@image.ImageUrl);">
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen">
        <svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" />
        </svg>
    </div>
</body>

</html>
