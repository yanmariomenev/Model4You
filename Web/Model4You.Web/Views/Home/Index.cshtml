    <section class="ftco-section ftco-no-pt">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-7 heading-section ftco-animate text-center">
                    <span class="subheading">Models</span>
                    <h2 class="mb-4">Sneak peek at our models</h2>
                    <p>Our models</p>
                </div>
            </div>
        </div>
        @*TODO DISPLAY RANDOM 6 MODELS*@
        <div class="container-fluid px-md-0">
            <div class="row no-gutters">
                @foreach (var modelInfo in Model.ModelProfile)
                {
                    <div class="col-md-4">
                        <div class="model img d-flex align-items-end" style="background-image: url(@modelInfo.ProfilePicture);">
                            <div class="desc w-100 px-4">
                                <div class="info w-100 mb-4">
                                    <ul>
                                        <li><span>Location:</span><span>@modelInfo.ModelInformation.Country, @modelInfo.ModelInformation.City</span></li>
                                        <li><span>Age:</span><span>@modelInfo.ModelInformation.Age</span></li>
                                        <li><span>Height:</span><span>@modelInfo.ModelInformation.Height.ToString("F2")</span></li>
                                        @if (!string.IsNullOrWhiteSpace(modelInfo.ModelInformation.ModelType))
                                        {
                                            <li><span>Model Type:</span><span>@modelInfo.ModelInformation.ModelType</span></li>
                                        }

                                    </ul>
                                </div>
                                <div class="text w-100 mb-3">
                                    <h2><a href="@modelInfo.Url">@modelInfo.FirstName <br>@modelInfo.LastName</a></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

