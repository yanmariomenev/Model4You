@using CloudinaryDotNet.Actions
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model Model4You.Web.ViewModels.Search.SearchResultViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>

    <section class="hero-wrap hero-wrap-2" style="background-image: url(https://localhost:5001/images/bg_1.jpg);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">
                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Our Models</h1>
                </div>

            </div>
        </div>
    </section>
    <section class="ftco-consult bg-primary">

        <div class="container-fluid px-md-4">
            <div class="row align-items-center">
                <div class="col-lg-2 text-lg-right">
                    <h3 class="mb-4 mb-lg-0">Search A Model</h3>
                </div>
                <div class="col-lg-10">
                    <form class="consult-form" method="get" enctype="multipart/form-data" asp-controller="Search" asp-action="Search">
                        <div class="d-lg-flex align-items-md-end">
                            <div class="form-field">
                            </div>
                            <div class="form-group mb-3 mb-lg-0 mr-4">
                                <div class="form-field">
                                    <div class="select-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="Country" id="1" class="form-control">
                                            <option value="@Model.SearchInputModel.Country">@Model.SearchInputModel.Country</option>
                                            <option value="Bulgaria">Bulgaria</option>
                                        </select>
                                        <span asp-validation-for="SearchInputModel.Country" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3 mb-lg-0 mr-4">
                                <div class="form-field">
                                    <div class="select-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="City" id="2" class="form-control">
                                            <option value="@Model.SearchInputModel.City">@Model.SearchInputModel.City</option>
                                            <option value="Sofia">Sofia</option>
                                            <option value="Plovdiv">Plovdiv</option>
                                            <option value="Blagoevgrad">Blagoevgrad</option>
                                            <option value="Burgas">Burgas</option>
                                            <option value="Varna">Varna</option>
                                            <option value="Stara Zagora">Stara Zagora</option>
                                            <option value="Pleven">Pleven</option>
                                            <option value="Pazardzhik">Pazardzhik</option>
                                            <option value="Veliko Tarnovo">Veliko Tarnovo</option>
                                            <option value="Haskovo">Haskovo</option>
                                            <option value="Ruse">Ruse</option>
                                            <option value="Vratsa">Vratsa</option>
                                            <option value="Sliven">Sliven</option>
                                            <option value="Dobrich">Dobrich</option>
                                            <option value="Shumen">Shumen</option>
                                            <option value="Montana">Montana</option>
                                            <option value="Lovech">Lovech</option>
                                            <option value="Kardzhali">Kardzhali</option>
                                            <option value="Kyustendil">Kyustendil</option>
                                            <option value="Yambol">Yambol</option>
                                            <option value="Razgrad">Razgrad</option>
                                            <option value="Pernik">Pernik</option>
                                            <option value="Gabrovo">Gabrovo</option>
                                            <option value="Silistra">Silistra</option>
                                            <option value="Smolyan">Smolyan</option>
                                            <option value="Targovishte">Targovishte</option>
                                            <option value="Vidin">Vidin</option>
                                        </select>
                                        <span asp-validation-for="SearchInputModel.City" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3 mb-lg-0 mr-4">
                                <div class="form-field">
                                    <div class="select-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="Gender" id="3" class="form-control">
                                            <option value="@Model.SearchInputModel.Gender">@Model.SearchInputModel.Gender</option>
                                            <option value="Female">Female</option>
                                            <option value="Male">Male</option>
                                        </select>
                                        <span asp-validation-for="SearchInputModel.Gender" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3 mb-lg-0 mr-4">
                                <!-- <label for="#">Bust</label> -->
                                <div class="form-field">
                                    <div class="select-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="Age" id="4" class="form-control">
                                            <option value="@Model.SearchInputModel.Age">@Model.SearchInputModel.Age</option>
                                            @for (int i = 12; i < 75; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SearchInputModel.Age" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3 mb-lg-0 mr-4">
                                <!-- <label for="#">Bust</label> -->
                                <div class="form-field">
                                    <div class="select-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select name="To" id="4" class="form-control">
                                            <option value="@Model.SearchInputModel.To">@Model.SearchInputModel.To</option>
                                            @for (int i = 13; i < 76; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                        <span asp-validation-for="SearchInputModel.To" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb-3 mb-lg-0 mr-4">
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Search" class="btn btn-primary py-3 px-4">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row">
                @if (Model.EmptyResult.Length > 0)
                {
                    <div class="col-md-12 col-sm-12 text-center ftco-animate">
                        <h1 class="mb-3 mt-5 bread">@Model.EmptyResult</h1>
                    </div>
                }
                else
                {
                    @foreach (var modelInfo in Model.SearchViewModels)
                    {
                        <div class="col-md-4">
                            <div class="model img d-flex align-items-end" style="background-image: url(@modelInfo.ProfilePicture);">
                                <div class="desc w-100 px-4">
                                    <div class="info w-100 mb-4">
                                        <ul>
                                            <li><span>Age:</span><span>@modelInfo.ModelInformation.Age</span></li>
                                            <li><span>Location:</span><span>@modelInfo.ModelInformation.City</span></li>
                                            <li><span>Height:</span><span>@modelInfo.ModelInformation.Height</span></li>
                                            <li><span>Model Type:</span><span>@modelInfo.ModelInformation.ModelType</span></li>
                                            @*<li><span>Body Type:</span><span></span></li>*@
                                            @*<li><span>Hips:</span><span>90</span></li>
                                    <li><span>Shoes:</span><span>39</span></li>
                                    <li><span>Eyes:</span><span>Blue</span></li>*@
                                        </ul>
                                    </div>
                                    <div class="text w-100 mb-3">
                                        @*TODO LINK TO MODEL PROFILE PAGE*@
                                        <h2><a href="@modelInfo.Url">@modelInfo.FirstName <br>@modelInfo.LastName</a></h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </section>

    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen">
        <svg class="circular" width="48px" height="48px">
            <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
            <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" />
        </svg>
    </div>

</body>

</html>
